<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fj.coordinatorlayout.MainActivity">

    <Button
        android:id="@+id/bt_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_first"
        android:text="@string/second"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/bt_typed_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_second"
        android:text="@string/typed_array"
        android:textAllCaps="false"/>
</RelativeLayout>
